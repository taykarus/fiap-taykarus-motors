							"listen": "test",
							"script": {
								"exec": [
									"var responseBody = pm.response.text();",
									"var saleId = responseBody.replace(/\"/g, \"\");",
									"",
									"pm.collectionVariables.set(\"saleId\", saleId);",
									"",
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
